{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://autarch.dev/schemas/scan/users.json",
  "allOf": [{ "$ref": "https://autarch.dev/schemas/scan/base.json" }],
  "required": ["personas"],
  "properties": {
    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "needs", "context"],
        "properties": {
          "name": { "type": "string", "minLength": 2 },
          "needs": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "context": { "type": "string", "minLength": 10 }
        },
        "additionalProperties": false
      }
    }
  }
}
